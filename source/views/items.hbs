<div class="item-list">
  {{#items}}
  <div class="item">
    <div class="l-hold">
      <div class="thumbs">
        <a href="{{../app.appRoot}}/book/{{ss_book_identifier}}/1"><img class="img-responsive" src="{{ss_representative_image}}" alt="" title="{{ss_title_long}}"/></a>
      </div>
      <div lang="en">
        <div class="md_title"><span class="md_label">Title:</span> <a href="{{../app.appRoot}}/book/{{ss_book_identifier}}/1">{{ss_title_long}}</a></div>                
        <div class="md_authors"><span class="md_label">Author:</span> {{#each sm_author}}<span  class="md_author">{{this}}</span>{{/each}}</div>                        
        <div><span class="md_label">Publisher:</span> {{#each sm_publisher}}<span>{{this}}</span>{{/each}}</div>
        <div><span class="md_label">Place of Publication:</span> {{ss_publocation}}</div>                        
        <div><span class="md_label">Date of Publication:</span> {{ss_pubdate}}</div>                        
        <div class="md_subjects">
        <span class="md_label">Subject:</span>
        {{#each zm_subject}}
          {{#json this}}
            <a class="md_subject" href="{{../../../app.appRoot}}/subjects/{{tid}}">{{name}}</a>
          {{/json}}
        {{/each}}        
        </div>
        <div><span class="md_label">Provider:</span> {{#each sm_collection_partner_label}}<span>{{this}}</span>{{/each}}</div>
      </div>
    </div>
    <div dir="rtl" lang="ar">
      <div class="md_title" dir="rtl" lang="ar">
        <span class="md_label">العنوان:</span>  
        <span><a href="{{../app.appRoot}}/book/{{ss_book_identifier}}/1?lang=ar">{{ss_ar_title_long}}</a></span>
      </div>
      <div class="md_authors">
        <span class="md_label">الكاتب:</span> 
        {{#each sm_ar_author}}<span class="md_author">{{this}}</span>{{/each}}
      </div>
      <div class="md_publisher"><span class="md_label">الناشر:</span> <span>{{sm_ar_publisher}}</span></div>
      <div class="md_publocation">
        <span class="md_label">مكان النشر:</span> <span>{{ss_ar_publication_location}}</span>
      </div>  
      <div class="md_pubdate"><span class="md_label">تاريخ النشر:</span> <span dir="ltr" lang="en" >{{ss_pubdate}}</span></div>                        
      <div class="md_subjects" ><span class="md_label">الموضوع:</span> 
        {{#each zm_subject}}
          {{#json this}}
            <a class="md_subject" href="{{../../../app.appRoot}}/subjects/{{tid}}">{{name}}</a>
          {{/json}}
        {{/each}}  
      </div>
      <div class="md_partner" ><span class="md_label">شريك:</span> {{#each sm_collection_partner_label}}<span>{{this}}</span>{{/each}}</div>       
    </div>                      
  </div>
  {{/items}}
</div>
