<div class="item-list">
  {{#items}}
  <div class="item">
    <div class="l-hold">
      <div class="thumbs">
        <a href="{{../app.appRoot}}/book/{{ss_identifer}}"><img class="img-responsive" src="{{ss_thumbnail}}" alt="" title="{{ss_title}}"/></a>
      </div>
      <div lang="en">
        <div class="md_title"><span class="md_label">Title:</span> <a href="{{../app.appRoot}}/book/{{ss_identifer}}">{{ss_title}}</a></div>                
        <div class="md_author"><span class="md_label">Author:</span> {{#each sm_author}}<span>{{this}}</span>{{/each}}</div>                        
        <div><span class="md_label">Publisher:</span> {{#each sm_publisher}}<span>{{this}}</span>{{/each}}</div>
        <div><span class="md_label">Place of Publication:</span> {{ss_publocation}}</div>                        
        <div><span class="md_label">Date of publication:</span> {{ss_pubdate}}</div>                        
        <div class="md_subjects"><span class="md_label">Subject:</span> {{#each sm_subject}}<span class="md_subject subjectno{{@index}}">{{this}}</span>{{/each}}</div>
        <div><span class="md_label">Provider:</span> {{#each sm_partner}}<span>{{this}}</span>{{/each}}</div>
      </div>
    </div>
    <div dir="rtl" lang="ar">
      <div dir="rtl" lang="ar" class="md_title"><span class="md_label">العنوان:</span> <span><a href="{{../app.appRoot}}/book/{{ss_identifer}}">{{ss_ar_title}}</a></span></div>
      <div class="md_authors" dir="rtl" lang="ar"><span class="md_label">الكاتب:</span>  
      {{#each sm_ar_author}}<span class="md_author">{{this}}</span>{{/each}}
</div> 
      <div dir="rtl" lang="ar"><span class="md_label">الناشر:</span> <span>{{sm_ar_publisher}}</span></div>
      <div dir="rtl" lang="ar"><span class="md_label">مكان النشر:</span> <span>{{ss_ar_publocation}}</span></div>   
      <div dir="rtl" lang="ar"><span class="md_label">تاريخ النشر:</span> <span>{{ss_ar_pubdate}}</span></div>                        
      <div class="md_subjects" dir="rtl" lang="ar"><span class="md_label">الموضوع:</span> {{#each sm_ar_subject}}<span class="md_subject">{{this}}</span>{{/each}}</div>
      <div dir="rtl" lang="ar"><span class="md_label">شريك:</span> {{#each sm_ar_partner}}<span class="md_partner">{{this}}</span>{{/each}}</div>       
    </div>                      
  </div>
  {{/items}}
</div>