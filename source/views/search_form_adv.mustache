<div class="search_holder_advanced widget" data-name="search_form" data-script='{ "js" : [ "search_form_adv.min.js" ] }'>
    <form class="advanced" method="get" action="{{ appUrl }}/search" role="search">
        <div class="filter-content" style="height:0; overflow:hidden;">
            <div class="fieldset group2">
                <div class="select-hold">
                    <div class="select-style">
                        <select class="field-select">
                            <option value="q">Any Field / أي مُصطلح</option>
                            <option value="title">Title / العنوان</option>
                            <option value="author">Author / الكاتب</option>
                            <option value="publisher">Publisher / الناشر</option>
                            <option value="pubplace">Place of Publication / مكان النشر</option>
                            <option value="provider">Provider / الشريك</option>
                        </select>
                    </div>
                </div>
                <div class="select-hold">
                    <div class="select-style">
                        <select class="scope-select">
                            <option data-sort-dir="asc" value="contains">Contains / يحتوي على</option>
                            <option data-sort-dir="asc" value="equals">Equals / يساوي</option>
                        </select>
                    </div>
                </div>
                <div class="input-hold">
                    <input class="q2" name="q2" type="text" placeholder="search  /  ابحث" title="Enter the terms you wish to search for.">
                </div>
                <div class="remove-filter">
                    <input type="button" class="remove-filter" value="x">
                </div>
            </div>
        </div>
        <div class="fieldset group1">
            <div class="select-hold">
                <div class="select-style">
                    <select class="field-select">
                        <option value="q">Any Field / أي مُصطلح</option>
                        <option value="title">Title / العنوان</option>
                        <option value="author">Author / الكاتب</option>
                        <option value="publisher">Publisher / الناشر</option>
                        <option value="pubplace">Place of Publication / مكان النشر</option>
                        <option value="provider">Provider / الشريك</option>
                    </select>
                </div>
            </div>
            <div class="select-hold">
                <div class="select-style">
                    <select class="scope-select">
                        <option value="contains">Contains / يحتوي على</option>
                        <option value="equals">Equals / يساوي</option>
                    </select>
                </div>
            </div>
            <div class="input-hold">
                <input class="q1" name="q1" type="text" placeholder="search  /  ابحث" title="Enter the terms you wish to search for.">
            </div>
            <div class="submit-hold">
                <input type="submit" class="submit-search">
            </div>
        </div>
        <div class="add"><a href="#" class="addafilter-link addafilter-link-available">Add a filter / أضِف فلتر</a></div>
    </form>
</div>